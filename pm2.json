{
  "apps": [
    {
      "name": "picamula-api",
      "cwd": "./apps/api",
      "script": "npm",
      "args": "run start:prod",
      "env": {
        "NODE_ENV": "production",
        "PORT": "8001"
      },
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "restart_delay": 4000,
      "max_restarts": 10,
      "min_uptime": "10s"
    },
    {
      "name": "picamula-web",
      "cwd": "./apps/web",
      "script": "npm",
      "args": "run start",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3003",
        "NEXT_PUBLIC_API_URL": "https://www.picamula.com/api"
      },
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "restart_delay": 4000,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}
